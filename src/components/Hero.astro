---
import Button from './Button.astro'
---

<section class="hero" aria-label="Hero section">
  <div
    class="hero__content fluid-spacing fluid-py"
    style="--spacing-min: 3.5rem; --spacing-max: 10rem;"
  >
    <div class="hero__content-wrapper">
      <h1
        class="fluid-type fluid-spacing fluid-mb hero__title"
        style="--font-size-min: var(--font-size-20); --font-size-max: var(--font-size-48); --spacing-min: 0.5rem; --spacing-max: 1.5rem;"
      >
        Start buying and selling cryptocurrency today
      </h1>

      <p
        class="fluid-type"
        style="--font-size-min: var(--font-size-14); --font-size-max: var(--font-size-20);"
      >
        CoinSynch is the safest place to buy, sell, and hold cryptocurrency.
        Sign up and get started now.
      </p>
    </div>

    <Button
      size="md"
      variant="primary"
      classes="button--sign-up-hero fluid-type"
      style="--font-size-min: var(--font-size-14); --font-size-max: var(--font-size-16);"
    >
      Sign up now
    </Button>
  </div>
</section>

<style is:global>
  .hero {
    min-height: calc(100svh - var(--header-height-sm));
    background-image: url('../assets/wave.svg');
    background-repeat: no-repeat;
    background-position-x: 50%;
    background-position-y: 105%;
    background-size: auto 180px;
  }

  .hero__content,
  .hero__content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero__content {
    gap: 1.5em;
  }

  .hero__content-wrapper {
    text-align: center;
  }

  .hero__title {
    max-width: 12.2916em;
    color: var(--orange-500);
    line-height: var(--line-height-32);
  }

  .button--sign-up-hero {
    min-width: 12.8571em;
  }

  @media (min-width: 48em) {
    .hero {
      background-size: auto 314px;
      background-position-x: 25%;
      background-position-y: 115%;
    }

    .button--sign-up-hero {
      min-width: 14.5em;
      min-height: 2.2857em;
      line-height: var(--line-height-40);
    }
  }

  @media (min-width: 90em) {
    .button--sign-up-hero {
      min-width: 17.375em;
      min-height: 3em;
      line-height: var(--line-height-56);
    }
  }
</style>
