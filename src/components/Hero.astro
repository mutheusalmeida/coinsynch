---
import arrowIcon from '@/assets/arrow-icon.svg'
import { Image } from '@astrojs/image/components'
import Button from './Button.astro'
---

<section class="hero" aria-label="Hero section">
  <div
    class="fluid-spacing fluid-px"
    style="--spacing-min: 1.5rem; --spacing-max: 7rem;"
  >
    <div
      class="hero__content fluid-spacing fluid-pt"
      style="--spacing-min: 3.5rem; --spacing-max: 10rem;"
    >
      <div class="hero__content-wrapper">
        <h1
          class="fluid-type fluid-spacing fluid-mb hero__title"
          style="--font-size-min: var(--font-size-20); --font-size-max: var(--font-size-48); --spacing-min: 0.5rem; --spacing-max: 1.5rem;"
        >
          Start buying and selling cryptocurrency today
        </h1>

        <p
          class="fluid-type"
          style="--font-size-min: var(--font-size-14); --font-size-max: var(--font-size-20);"
        >
          CoinSynch is the safest platform for buying, selling, transferring,
          and storing cryptocurrency, and is trusted worldwide. Sign up and get
          started now.
        </p>
      </div>

      <Button
        size="md"
        variant="primary"
        textTransform="uppercase"
        classes="button--sign-up-hero fluid-type"
        style="--font-size-min: var(--font-size-14); --font-size-max: var(--font-size-16);"
      >
        Sign up now

        <Image src={arrowIcon} alt="Arrow" />
      </Button>
    </div>
  </div>
</section>

<style is:global>
  .hero {
    min-height: calc(100svh - var(--header-height-sm));
    background-image: url('../assets/wave.svg');
    background-repeat: no-repeat;
    background-position-x: 50%;
    background-position-y: 105%;
    background-size: auto 180px;
  }

  .hero__content,
  .hero__content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero__content {
    gap: 1.5em;
  }

  .hero__content-wrapper {
    text-align: center;

    & p {
      max-width: 22.8571em;
    }
  }

  .hero__title {
    max-width: 12.2916em;
    color: var(--orange-500);
    line-height: var(--line-height-32);
  }

  .button--sign-up-hero {
    min-width: 12.8571em;
  }

  @media (min-width: 48em) {
    .hero {
      background-size: auto 314px;
      background-position-x: 25%;
      background-position-y: 115%;
    }

    .hero__content-wrapper {
      text-align: start;
    }

    .hero__content,
    .hero__content-wrapper {
      align-items: flex-start;
    }

    .button--sign-up-hero {
      min-width: 14.5em;
      min-height: 2.2857em;
      line-height: var(--line-height-40);
    }
  }

  @media (min-width: 90em) {
    .button--sign-up-hero {
      min-width: 17.375em;
      min-height: 3em;
      line-height: var(--line-height-56);
    }

    .hero__content {
      gap: 2em;
    }

    .hero__content-wrapper {
      & p {
        max-width: 29.5em;
      }
    }
  }
</style>
