---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Button from './Button.astro'

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>

const { as: Tag, ...props } = Astro.props
---

<Tag
  {...props}
  class="normal-type"
  style="--font-size: var(--font-size-14)"
  aria-label="Main navigation"
>
  <ul class="list">
    <li class="list__item"><a href="#about-us">About us</a></li>
    <li class="list__item"><a href="#top-cyptos">Top cryptos</a></li>
    <li class="list__item"><Button>Sign in</Button></li>
    <li class="list__item">
      <Button classes="button--sign-up" size="md" variant="primary">
        Sign up
      </Button>
    </li>
  </ul>
</Tag>

<style is:global>
  .list {
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5em;

    & .list__item {
      list-style: none;
      line-height: var(--line-height-14);

      & a {
        text-decoration: none;
      }
    }
  }

  .button--sign-up {
    min-width: 7.1428em;
  }
</style>
